  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>


<div class="row">
  <div class="col-auto">
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a comment:</h3>

    <form class="form add-comment"> 
