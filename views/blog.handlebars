<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>


<div class="row">
  <div class="col-auto">
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a comment:</h3>

    <form class="form add-comment"> 
      <div class="form-group">
        <label for="comment-add">Comment:</label>
        <textarea class="form-input" id="comment-add" name="comment-add"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>


  {{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Your Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>



<script src="/js/comment.js"></script>